    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
  }

  .time-item {
    display: flex;
    flex-direction: column;
    padding: 1rem;
    background-color: var(--sl-color-bg);
    border-radius: 6px;
    text-align: center;
  }

  .priority {
    font-weight: bold;
    margin-bottom: 0.5rem;
  }

  .time {
    font-size: 0.9rem;
    color: var(--sl-color-gray-5);
  }

  .button-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
  }

  .action-btn {
    display: inline-block;
    padding: 1rem 1.5rem;
    text-decoration: none;
    border-radius: 8px;
    text-align: center;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .action-btn.primary {
    background: linear-gradient(135deg, #ff5e00, #cc4a00);
    color: white;
  }

  .action-btn.primary:hover {
    background: linear-gradient(135deg, #cc4a00, #b33d00);
    transform: translateY(-2px);
  }

  .action-btn.secondary {
    background-color: var(--sl-color-gray-2);
    color: var(--sl-color-text);
    border: 2px solid var(--sl-color-gray-3);
  }

  .action-btn.secondary:hover {
    background-color: var(--sl-color-gray-3);
    border-color: #ff5e00;
  }

  .urgent-box {
    background: linear-gradient(135deg, #fff5f5, #ffe5e5);
    border-left-color: #dc3545;
  }

  .contact-direct {
    background-color: var(--sl-color-bg);
    padding: 1rem;
    border-radius: 6px;
    margin: 1rem 0;
  }

  .contact-direct a {
    color: #ff5e00;
    font-weight: bold;
  }

  .tips-list {
    list-style: none;
    padding: 0;
  }

  .tips-list li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--sl-color-gray-2);
  }

  .tips-list li:last-child {
    border-bottom: none;
  }

  @media (max-width: 768px) {
    .success-container {
